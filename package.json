{
  "name": "metalsmith-seo",
  "version": "0.2.1",
  "description": "A metalsmith plugin for SEO optimization including sitemap generation, meta tags, and more.",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "microbundle --target node -f esm,cjs --strict --generateTypes=false --sourcemap",
    "test": "npm run build && NODE_ENV=test c8 mocha 'test/index.test.js' 'test/index.test.cjs' 'test/unit/**/*.js' 'test/seo-features.test.js' 'test/robots.test.js' 'test/performance.test.js' 'test/card-extraction.test.js' 'test/author-fallback.test.js' -t 10000",
    "test:esm": "npm run build && NODE_ENV=test c8 mocha test/index.test.js -t 10000",
    "test:cjs": "npm run build && NODE_ENV=test c8 mocha test/index.test.cjs -t 10000",
    "test:coverage": "npm test",
    "lint": "eslint src test --fix",
    "lint:check": "eslint src test",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "release:check": "npm run lint:check && npm run build && release-it --dry-run",
    "release:patch": "./scripts/release.sh patch --ci",
    "release:minor": "./scripts/release.sh minor --ci",
    "release:major": "./scripts/release.sh major --ci"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wernerglinka/metalsmith-seo.git"
  },
  "keywords": [
    "metalsmith",
    "seo",
    "sitemap",
    "meta-tags",
    "open-graph"
  ],
  "author": {
    "name": "ExtraHop Networks",
    "url": "http://www.extrahop.com"
  },
  "contributors": [
    {
      "name": "Aaron Boushley"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wernerglinka/metalsmith-seo/issues"
  },
  "homepage": "https://github.com/wernerglinka/metalsmith-seo",
  "dependencies": {
    "cheerio": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "metalsmith": "^2.6.3",
    "microbundle": "^0.15.1",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4"
  }
}
